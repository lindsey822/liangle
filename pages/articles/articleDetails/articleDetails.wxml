<view class='container articleContainer'>
  <view class='header'>
    <view class='headerText'>
      <text class="articleTitle">{{title}}</text>
      <text class="subTitle">{{author}}发表于{{date}}</text>
    </view>

    <view class="shareButtonContainer">
    <button open-type="share" class="shareButton">
        <image class="shareToFriendsIcon" mode="center" src="../../../assets/share_button.svg" background-size="cover"></image>
    </button>
    <text class="subTitle">分享</text>
    </view>

    <view class="shareButtonContainer">
    <button class="shareButton" bindtap="previewImage">
        <image class="shareByQrCodeIcon" mode="center" src="../../../assets/qrcode_button.svg" background-size="cover"></image>
    </button>
    <text class="subTitle">二维码</text>
    </view>

  </view>
  <view class='body'>
    {{body}}
  </view>
  <navigator class="logoButtonContainer" open-type="switchTab" url="../../home/home" hover-class="none">
    <image class="logo" src="../../../assets/logo.svg"></image>
    <text class="subTitle">回到首页</text>
  </navigator>
</view>