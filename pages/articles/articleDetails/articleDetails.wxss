.articleContainer {
  margin-left: 36rpx;
  margin-right: 36rpx;
  margin-top: 36rpx;
  margin-bottom: 36rpx;
}

.header {
  display: flex;
}

.headerText {
  width: 67%;
  height: 100%;
  display: flex;
  flex-direction: column;
  margin-right: 3%;
}

.articleTitle {
  margin-bottom: 10rpx;
  margin-right: 6rpx;
}

.subTitle {
  color: #cecece;
  font-size: 30rpx;
}

.shareButtonContainer {
  height: 100%;
  display: flex;
  flex-direction: column;
  margin: 0 20rpx;
  align-items: center;
  justify-content: space-between;
}

.shareButton {
   /* background-color: #cecece;  */
   border: 1rpx solid #cecece;
   border-radius: 50%; 
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 10rpx;
}

.shareToFriendsIcon {
  background: url("http://lc-gfg4xp03.cn-n1.lcfile.com/dd059f8449e507c4a32f.svg") center no-repeat;
}

.shareByQrCodeIcon {
  background: url("http://lc-gfg4xp03.cn-n1.lcfile.com/f493ccfbf9a452ce4719.svg") center no-repeat;
}

.body {
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  margin-bottom: 30rpx;
  font-size: 35rpx;
  color: #222222;
  border-bottom: 1rpx solid #f9f9f9;
  white-space: pre-line;
  text-align: justify;
}

.logoButtonContainer {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.logo {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 10rpx;
}
