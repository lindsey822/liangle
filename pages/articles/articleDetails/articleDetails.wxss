.articleContainer {
  margin: 36rpx 36rpx;
}

.header {
  display: flex;
}

.headerText {
  width: 67%;
  height: 100%;
  display: flex;
  flex-direction: column;
  margin-right: 3%;
}

.articleTitle {
  margin-bottom: 10rpx;
  margin-right: 6rpx;
}

.subTitle {
  color: #cecece;
  font-size: 30rpx;
}

.shareButtonContainer {
  height: 100%;
  display: flex;
  flex-direction: column;
  margin: 0 20rpx;
  align-items: center;
  justify-content: space-between;
}

.shareButton {
   background-color: rgba(0,0,0,0.1);
   border-radius: 50%;
   padding: 0;
   width: 100rpx;
   height: 100rpx;
   margin-bottom: 10rpx;
   border: 0;
}

