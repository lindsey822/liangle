.body {
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  margin-bottom: 30rpx;
  font-size: 35rpx;
  color: #222222;
  border-bottom: 1rpx solid #f9f9f9;
  white-space: pre-line;
  text-align: justify;
}

.logoButtonContainer {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.logo {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 10rpx;
}
